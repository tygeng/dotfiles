set clipboard=unnamed
set incsearch
set ic

eclipseaction toggleJavaComment org.eclipse.jdt.ui.edit.text.java.toggle.comment

nnoremap s :toggleJavaComment<enter>

eclipseaction findref org.eclipse.jdt.ui.edit.text.java.search.references.in.workspace
nnoremap gr :findref<enter>
eclipseaction refactorName org.eclipse.jdt.ui.edit.text.java.rename.element
